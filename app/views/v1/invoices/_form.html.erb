<% if @v1_invoice.errors.any? %>
<div id="error_explanation">
<div class="alert alert-danger">
The form contains <%= pluralize(@v1_invoice.errors.count, "error") %>.
</div>
<ul>
<% @v1_invoice.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label 'اسم الفاتورة' %>
      <%= f.text_field :name, class: "form-control",id: "inputEmail4" , placeholder: "Invoice Name" %>
    </div>

      <div class="form-group col-md-6">
      <%= f.label 'العنوان' %>
      <%= f.text_field :address, class: "form-control",id: "inputAddress" , placeholder: "1234 Main St" %>
    </div>

      <div class="form-group col-md-6">
      <%= f.label 'التــاريخ' %>
      <%= f.text_field :date, class: "form-control",id: "inputEmail4" , placeholder: "Invoice Date" %>
    </div>

      <div class="form-group col-md-6">
      <%= f.label 'رقم الفاتورة' %>
      <%= f.text_field :invoice_number, class: "form-control",id: "inputEmail4" , placeholder: "invoice_number" %>
    </div>

      <div class="form-group col-md-6">
      <%= f.label 'المبلغ المدفوع' %>
      <%= f.text_field :amount_paid, class: "form-control",id: "inputEmail4" , placeholder: "amount_paid" %>
    </div>
     <div class="form-group col-md-6">
      <%= f.label 'المبلغ المتبقي' %>
      <%= f.text_field :remaining, class: "form-control",id: "inputEmail4" , placeholder: "remaining" %>
    </div>
     <div class="form-group col-md-6">
      <%= f.label 'total_cost' %>
      <%= f.text_field :total_cost, class: "form-control",id: "inputEmail4" , placeholder: "total_cost" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label 'طريقه الدفع' %>
      <%=
        f.select :currency_type, options_for_select(Invoice.currency_type.options, selected: 'yr'), {},
        { autofocus: 'true', id: "inputState", class: 'form-control'}
      %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label 'نوع الفاتورة' %>
      <%=
        f.select :invoice_type, options_for_select(Invoice.invoice_type.options, selected: 'Cash'), {},
        { autofocus: 'true', id: "inputState", class: 'form-control'}
      %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label 'حالة الفاتورة' %>
      <%=
        f.select :status, options_for_select(Invoice.status.options, selected: 'Active'), {},
        { autofocus: 'true', id: "inputState", class: 'form-control'}
      %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label 'orgnaization_id' %>
      <%= f.text_field :orgnaization_id, class: "form-control",id: "inputEmail4" , placeholder: "description" %>
    </div>

    <!--Textarea with icon prefix-->
  <div class="md-form amber-textarea active-amber-textarea-2">
    <i class="fas fa-pencil-alt prefix"></i>
    <%# <textarea id="form24" class="md-textarea form-control" rows="3"></textarea> %>
    <%# <label for="form24">Material textarea with an always colorful prefix</label> %>
    <%= f.text_area :description, id: "form24", placeholder: "الوصف", class: "md-textarea form-control", rows: "3"  %>
  </div>

  </div>
